		pass = new JPasswordField();
		pass.setFont(new Font("Times New Roman", Font.BOLD, 15));
		pass.setBackground(Color.LIGHT_GRAY);
		pass.setBounds(349, 201, 200, 40);
		panel_1.add(pass);
		
		JButton btnNewButton = new JButton("Ulogujte se");
		btnNewButton.setIcon(null);
		btnNewButton.setForeground(Color.BLACK);
		btnNewButton.setBackground(Color.LIGHT_GRAY);
		btnNewButton.addActionListener(new ActionListener() {
		    public void actionPerformed(ActionEvent e) {
		        String un=user.getText();
		        char[] passChar=pass.getPassword();
		        String pas=new String(passChar);

		        if (un.equals("Doktor")&&pas.equals("1234")) {
		            JOptionPane.showMessageDialog(null, "Dobrodošli doktore!");

		            // Kreirajte novi objekat JFrame-a za glavnu stranicu
		            JFrame Menu = new Menu();

		            // Sakrijte trenutni prozor za prijavu
		            setVisible(false);

		            // Prikazite glavnu stranicu
		            Menu.setVisible(true);
		        } else {
		            JOptionPane.showMessageDialog(null, "Neispravno korisničko ime ili lozinka!");
		        }
		    }

		    
		});
		btnNewButton.setFont(new Font("Comic Sans MS", Font.BOLD, 16));
		btnNewButton.setBounds(406, 269, 85, 30);
		panel_1.add(btnNewButton);
		
		
		JLabel BackgroundLabel = new JLabel(new ImageIcon("C:\\Users\\Alen LAPTOP\\Desktop\\Zubna ordinacija\\ZubnaOrdinacija\\src\\resources\\wallpaper2.jpg"));
		BackgroundLabel.setBounds(0, 0, 786, 462);
		panel_1.add(BackgroundLabel);
		
		
	
	
	}

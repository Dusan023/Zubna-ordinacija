			public void actionPerformed(ActionEvent e) {
				
				String JMBG=txtJMBG.getText();

		        if (JMBG.length()==13) {
				
				DefaultTableModel model = (DefaultTableModel) tblTermini.getModel();
				model.addRow(new Object[] {
						txtIme.getText(), txtPrezime.getText(), txtJMBG.getText(), txtBrojTelefona.getText(), txtDatum.getText(), txtPocetak.getText(), 
						txtKraj.getText(), txtUsluga.getText(), txtNapomena.getText(),
						
				});
				
				txtIme.setText("");
				txtPrezime.setText("");
				txtJMBG.setText("");
				txtBrojTelefona.setText("");
				txtDatum.setText("");
				txtPocetak.setText("");
				txtKraj.setText("");
				txtUsluga.setText("");
				txtNapomena.setText("");
				
		        }
		        
		        else {
		            JOptionPane.showMessageDialog(null, "Neispravan unos JMBG-a!");
		        }
			}
		});
				

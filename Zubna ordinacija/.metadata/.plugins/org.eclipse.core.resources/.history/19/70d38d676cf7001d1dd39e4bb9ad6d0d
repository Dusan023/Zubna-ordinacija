import java.awt.EventQueue;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import java.awt.Font;
import javax.swing.JTextField;
import javax.swing.JPasswordField;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.Color;

import javax.swing.ImageIcon;
import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;
import java.awt.Toolkit;


public class Login extends JFrame {
	private static final long serialVersionUID = 1L;
	private JPanel contentPane;
	private JTextField user;
	private JPasswordField pass;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Login frame = new Login();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public Login() {
		setResizable(false);
		setIconImage(Toolkit.getDefaultToolkit().getImage(Login.class.getResource("/resources/Logo.png")));
		setTitle("Dobrodosli!");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 800, 499);
		contentPane = new JPanel();
		contentPane.setBackground(Color.WHITE);
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));

		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JPanel panel = new JPanel();
		panel.setBackground(Color.WHITE);
		panel.setBounds(0, 0, 786, 462);
		contentPane.add(panel);
		panel.setLayout(null);
		
		JPanel panel_1 = new JPanel();
		panel_1.setBackground(new Color(245, 245, 245));
		panel_1.setBounds(0, 0, 786, 462);
		panel.add(panel_1);
		panel_1.setLayout(null);
		
		JLabel KorisnickoImeLabel = new JLabel("Korisničko ime:");
		KorisnickoImeLabel.setForeground(Color.BLACK);
		KorisnickoImeLabel.setBackground(Color.WHITE);
		KorisnickoImeLabel.setFont(new Font("Comic Sans MS", Font.BOLD, 16));
		KorisnickoImeLabel.setBounds(203, 134, 118, 50);
		panel_1.add(KorisnickoImeLabel);
		
		JLabel LozinkaLabel = new JLabel("Lozinka:");
		LozinkaLabel.setForeground(Color.BLACK);
		LozinkaLabel.setFont(new Font("Comic Sans MS", Font.BOLD, 16));
		LozinkaLabel.setBounds(221, 193, 100, 50);
		panel_1.add(LozinkaLabel);
		
		user = new JTextField();
		user.setFont(new Font("Times New Roman", Font.BOLD, 15));
		user.setBackground(Color.LIGHT_GRAY);
		user.setBounds(349, 141, 200, 40);
		panel_1.add(user);
		user.setColumns(10);
		
		pass = new JPasswordField();
		pass.setFont(new Font("Times New Roman", Font.BOLD, 15));
		pass.setBackground(Color.LIGHT_GRAY);
		pass.setBounds(349, 201, 200, 40);
		panel_1.add(pass);
		
		JButton LoginButton = new JButton("Ulogujte se");
		LoginButton.setIcon(null);
		LoginButton.setForeground(Color.BLACK);
		LoginButton.setBackground(Color.LIGHT_GRAY);
		LoginButton.addActionListener(new ActionListener() {
		    public void actionPerformed(ActionEvent e) {
		        String un=user.getText();
		        char[] passChar=pass.getPassword();
		        String pas=new String(passChar);

		        if (un.equals("Doktor")&&pas.equals("1234")) {
		            JOptionPane.showMessageDialog(null, "Dobrodošli doktore!");

		            JFrame Menu = new Menu();

		            setVisible(false);

		            Menu.setVisible(true);
		        }
		        
		        else if (un.equals("Recepcioner")&&pas.equals("1234")) {
		            
		            SharedDataModel.setLoggedIn(true);
		            
		            JOptionPane.showMessageDialog(null, "Dobrodošli!");
		            
		            JFrame Menu = new Menu();

		            setVisible(false);

		            Menu.setVisible(true);

		        }
		        
		        else {
		            JOptionPane.showMessageDialog(null, "Neispravno korisničko ime ili lozinka!");
		        }
		    }

		    
		});
		
		getRootPane().setDefaultButton(LoginButton);
		
		LoginButton.setFont(new Font("Comic Sans MS", Font.BOLD, 16));
		LoginButton.setBounds(370, 269, 148, 30);
		panel_1.add(LoginButton);
		
		
		JLabel BackgroundLabel = new JLabel(new ImageIcon(Login.class.getResource("/resources/LoginWallpaper.jpg")));
		BackgroundLabel.setBounds(0, 0, 786, 462);
		panel_1.add(BackgroundLabel);
		
		
	
	
	}
}
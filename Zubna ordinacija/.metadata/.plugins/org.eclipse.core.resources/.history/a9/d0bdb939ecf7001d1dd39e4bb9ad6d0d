		btnSacuvaj.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				String JMBG=txtJMBG.getText();

		        if (JMBG.length()==13) {
				
				DefaultTableModel model = (DefaultTableModel) tblTermini.getModel();
				model.addRow(new Object[] {
						txtIme.getText(), txtPrezime.getText(), txtJMBG.getText(), txtBrojTelefona.getText(), spnVremeStart.getValue(), 
						spnVremeKraj.getValue(), txtUsluga.getText(), txtNapomena.getText(),
						
				});
				
				txtIme.setText("");
				txtPrezime.setText("");
				txtJMBG.setText("");
				txtBrojTelefona.setText("");
				spnVremeStart.setValue(0);
				spnVremeKraj.setValue(0);
				txtUsluga.setText("");
				txtNapomena.setText("");
				
		        }
		        
		        else {
		            JOptionPane.showMessageDialog(null, "Neispravan unos JMBG-a!");
		        }
			}
		});
				

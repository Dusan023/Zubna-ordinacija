				String JMBG=txtJMBG.getText();

		        if (JMBG.length()==13) {
				
				DefaultTableModel model = (DefaultTableModel) tblKartoni.getModel();
				model.addRow(new Object[] {
						txtIme.getText(), txtPrezime.getText(), txtJMBG.getText(), txtBrojTelefona.getText(), txtDatumRodjenja.getText(), 
						cbPol.getSelectedItem(), txtAlergije.getText(), txtLekovi.getText(), spnBrojZuba.getValue(), txtareaPrethodniZubi.getText(),
						
				});
				
				txtIme.setText("");
				txtPrezime.setText("");
				txtJMBG.setText("");
				txtBrojTelefona.setText("");
				txtDatumRodjenja.setText("");
				cbPol.setSelectedIndex(0);
				txtAlergije.setText("");
				txtLekovi.setText("");
				spnBrojZuba.setValue(32);
				txtareaPrethodniZubi.setText("");
				
		        }
		        
		        else {
		            JOptionPane.showMessageDialog(null, "Neispravan unos JMBG-a!");
		        }
			}
		});

			lblKonfirmacija2.setFont(new Font("Times New Roman", Font.BOLD, 40));
			lblKonfirmacija2.setBounds(10, 62, 426, 62);
			contentPanel.add(lblKonfirmacija2);
		}
		{
			JLabel lblNewLabel_1 = new JLabel("");
			lblNewLabel_1.setIcon(new ImageIcon("C:\\Users\\Alen LAPTOP\\Downloads\\rsz_4440470.png"));
			lblNewLabel_1.setHorizontalAlignment(SwingConstants.CENTER);

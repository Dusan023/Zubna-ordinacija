<Window x:Class="Zubna_Ordinacija_WPF.Prozori.Lekovi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zubna_Ordinacija_WPF.Prozori"
        mc:Ignorable="d"
        Title="DentalKeep - Lekovi" Height="800" Width="1500" Icon="/Prozori/Logo.png" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Prozori/Wallpaper.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="TextboxNaziv" HorizontalAlignment="Left" Margin="30,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxProizvodjac" HorizontalAlignment="Left" Margin="190,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxJacina" HorizontalAlignment="Left" Margin="350,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxDoziranje" HorizontalAlignment="Left" Margin="510,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" FontFamily="Yu Gothic UI Semibold" Height="30" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxIdLeka" HorizontalAlignment="Center" Margin="0,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold" Visibility="Hidden">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <Image x:Name="LogoPacijenti" HorizontalAlignment="Left" Height="52" Margin="584,39,0,0" VerticalAlignment="Top" Width="54" Source="/Prozori/Logo.png"/>
        <Label x:Name="LabelaPacijenti" Content="Lekovi" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" Height="84" Width="228" FontFamily="Garamond" FontSize="60" FontWeight="Bold"/>
        <Label x:Name="LabelaNaziv" Content="Naziv" HorizontalAlignment="Left" Margin="85,161,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaProizvodjac" Content="Proizvođač" HorizontalAlignment="Left" Margin="227,161,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaJacina" Content="Jačina" HorizontalAlignment="Left" Margin="403,161,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabeaDoziranje" Content="Doziranje" HorizontalAlignment="Left" Margin="553,161,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="ButtonDodaj" Content="Dodaj" Margin="926,193,418,538" Background="#FF9DF16A" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonDodaj_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonObrisi" Content="Obriši" Margin="1113,193,231,538" Background="#FFF17D5D" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonObrisi_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonIzmeni" Content="Izmeni" Margin="1301,193,43,538" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonIzmeni_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonNazad" Content="Nazad" Margin="10,10,1394,734" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Click="ButtonNazad_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <DataGrid Name="DataGrid" AutoGenerateColumns="False" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="58,309,46,44" SelectionChanged="DataGrid_SelectionChanged_1" Background="#FFFFF0A7" AlternatingRowBackground="#FFFFF5C3" FontFamily="Yu Gothic UI Semibold" FontSize="14" BorderBrush="Black">
            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding IDLeka}" Header="ID Leka" Width="*"/>
                <DataGridTextColumn Binding="{Binding Naziv}" Header="Naziv" Width="*"/>
                <DataGridTextColumn Binding="{Binding Proizvodjac}" Header="Proizvodjac" Width="*"/>
                <DataGridTextColumn Binding="{Binding Jacina}" Header="Jacina" Width="*"/>
                <DataGridTextColumn Binding="{Binding Doziranje}" Header="Doziranje" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>

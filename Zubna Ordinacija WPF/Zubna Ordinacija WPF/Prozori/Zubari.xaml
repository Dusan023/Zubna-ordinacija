<Window x:Class="Zubna_Ordinacija_WPF.Prozori.Zubari"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zubna_Ordinacija_WPF.Prozori"
        mc:Ignorable="d"
        Title="DentalKeep - Zubari" Height="800" Width="1500" Icon="/Prozori/Logo.png" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Prozori/Wallpaper.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="TextboxIme" HorizontalAlignment="Left" Margin="21,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxPrezime" HorizontalAlignment="Left" Margin="181,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxJMBG" HorizontalAlignment="Left" Margin="341,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxBrojTelefona" HorizontalAlignment="Left" Margin="501,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" FontFamily="Yu Gothic UI Semibold" Height="30" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxEmail" HorizontalAlignment="Left" Margin="662,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxIdZubara" HorizontalAlignment="Left" Margin="22,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold" Visibility="Hidden">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <Image x:Name="LogoPacijenti" HorizontalAlignment="Left" Height="52" Margin="568,39,0,0" VerticalAlignment="Top" Width="54" Source="/Prozori/Logo.png"/>
        <Label x:Name="LabelaPacijenti" Content="Zubari" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" Height="84" Width="228" FontFamily="Garamond" FontSize="60" FontWeight="Bold"/>
        <Label x:Name="LabelaIme" Content="Ime" HorizontalAlignment="Left" Margin="82,163,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaPrezime" Content="Prezime" HorizontalAlignment="Left" Margin="228,164,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaJMBG" Content="JMBG" HorizontalAlignment="Left" Margin="395,163,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaBrojTelefona" Content="Broj telefona" HorizontalAlignment="Left" Margin="534,163,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaEmail" Content="E-Mail" HorizontalAlignment="Left" Margin="713,163,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="ButtonDodaj" Content="Dodaj" Margin="921,195,423,536" Background="#FF9DF16A" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonDodaj_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonObrisi" Content="Obriši" Margin="1108,195,236,536" Background="#FFF17D5D" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonObrisi_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonIzmeni" Content="Izmeni" Margin="1296,195,48,536" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonIzmeni_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonNazad" Content="Nazad" Margin="10,10,1394,734" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Click="ButtonNazad_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <DataGrid Name="DataGrid" AutoGenerateColumns="False" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="58,309,46,44" SelectionChanged="DataGrid_SelectionChanged_1" Background="#FFFFF0A7" AlternatingRowBackground="#FFFFF5C3" FontFamily="Yu Gothic UI Semibold" FontSize="14" BorderBrush="Black">
            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding IDZubara}" Header="ID Zubara" Width="*"/>
                <DataGridTextColumn Binding="{Binding Ime}" Header="Ime" Width="*"/>
                <DataGridTextColumn Binding="{Binding Prezime}" Header="Prezime" Width="*"/>
                <DataGridTextColumn Binding="{Binding JMBG}" Header="JMBG" Width="*"/>
                <DataGridTextColumn Binding="{Binding BrojTelefona}" Header="BrojTelefona" Width="*"/>
                <DataGridTextColumn Binding="{Binding Email}" Header="Email" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>

<Window x:Class="Zubna_Ordinacija_WPF.Prozori.Termini"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zubna_Ordinacija_WPF.Prozori"
        mc:Ignorable="d"
        Title="DentalKeep - Termini" Height="800" Width="1500" Icon="/Prozori/Logo.png" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Prozori/Wallpaper.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="TextboxVreme" HorizontalAlignment="Left" Margin="498,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontFamily="Yu Gothic UI Semibold" Height="28" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxVrstaUsluge" HorizontalAlignment="Left" Margin="660,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontFamily="Yu Gothic UI Semibold" Height="30" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxIdTermina" HorizontalAlignment="Left" Margin="21,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold" Visibility="Hidden">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <Image x:Name="LogoPacijenti" HorizontalAlignment="Left" Height="52" Margin="572,39,0,0" VerticalAlignment="Top" Width="54" Source="/Prozori/Logo.png"/>
        <Label x:Name="LabelaPacijenti" Content="Termini" HorizontalAlignment="Left" Margin="624,23,0,0" VerticalAlignment="Top" Height="84" Width="228" FontFamily="Garamond" FontSize="60" FontWeight="Bold"/>
        <Label x:Name="LabelaPacijent" Content="Pacijent" HorizontalAlignment="Left" Margin="67,153,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaZubar" Content="Zubar" HorizontalAlignment="Left" Margin="233,153,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaVreme" Content="Vreme" HorizontalAlignment="Left" Margin="551,153,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaVrstaUsluge" Content="Vrsta usluge" HorizontalAlignment="Left" Margin="694,153,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="ButtonDodaj" Content="Dodaj" Margin="922,185,422,546" Background="#FF9DF16A" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonDodaj_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonObrisi" Content="Obriši" Margin="1109,185,235,546" Background="#FFF17D5D" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonObrisi_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonIzmeni" Content="Izmeni" Margin="1297,185,47,546" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonIzmeni_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonNazad" Content="Nazad" Margin="10,10,1394,734" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Click="ButtonNazad_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <DataGrid Name="DataGrid" AutoGenerateColumns="False" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="58,309,46,44" SelectionChanged="DataGrid_SelectionChanged_1" Background="#FFFFF0A7" AlternatingRowBackground="#FFFFF5C3" FontFamily="Yu Gothic UI Semibold" FontSize="14" BorderBrush="Black">
            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding IDTermina}" Header="ID termina" Width="*"/>
                <DataGridTextColumn Binding="{Binding IDPacijenta}" Header="ID pacijenta" Width="*"/>
                <DataGridTextColumn Binding="{Binding IDZubara}" Header="ID Zubara" Width="*"/>
                <DataGridTextColumn Binding="{Binding Datum}" Header="Datum" Width="*"/>
                <DataGridTextColumn Binding="{Binding Vreme}" Header="Vreme" Width="*"/>
                <DataGridTextColumn Binding="{Binding VrstaUsluge}" Header="Vrsta usluge" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
        <DatePicker x:Name="DatepickerDatum" HorizontalAlignment="Left" Margin="339,187,0,0" VerticalAlignment="Top" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FirstDayOfWeek="Monday" Text="Iza" Height="31" Width="154"/>
        <Label x:Name="LabelaDatum" Content="Datum" HorizontalAlignment="Left" Margin="390,153,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <ComboBox x:Name="ComboboxZubar" HorizontalAlignment="Left" Margin="179,189,0,0" VerticalAlignment="Top" Width="155" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" Foreground="Black" Height="26" Loaded="ComboboxZubar_Loaded"/>
        <ComboBox x:Name="ComboboxPacijent" HorizontalAlignment="Left" Margin="19,189,0,0" VerticalAlignment="Top" Width="155" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" Foreground="Black" Height="26" Loaded="ComboboxPacijent_Loaded"/>

    </Grid>
</Window>

<Window x:Class="Zubna_Ordinacija_WPF.Prozori.Pacijenti"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zubna_Ordinacija_WPF.Prozori"
        mc:Ignorable="d"
        Title="DentalKeep - Pacijenti" Height="800" Width="1500" Icon="/Prozori/Logo.png" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Prozori/Wallpaper.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="TextboxIme" HorizontalAlignment="Left" Margin="21,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxPrezime" HorizontalAlignment="Left" Margin="181,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxJMBG" HorizontalAlignment="Left" Margin="341,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxBrojTelefona" HorizontalAlignment="Left" Margin="501,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" FontFamily="Yu Gothic UI Semibold" Height="30" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxTrudnoca" HorizontalAlignment="Left" Margin="181,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxIdPacijenta" HorizontalAlignment="Left" Margin="662,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold" Visibility="Hidden">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxAlergije" HorizontalAlignment="Left" Margin="501,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox x:Name="TextboxBrojZuba" HorizontalAlignment="Left" Margin="341,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" FontFamily="Yu Gothic UI Semibold" Height="29" FontSize="14" Background="#FFFFF0A7" FontWeight="Bold">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <Image x:Name="LogoPacijenti" HorizontalAlignment="Left" Height="52" Margin="584,39,0,0" VerticalAlignment="Top" Width="54" Source="/Prozori/Logo.png"/>
        <Label x:Name="LabelaPacijenti" Content="Pacijenti" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" Height="84" Width="228" FontFamily="Garamond" FontSize="60" FontWeight="Bold"/>
        <Label x:Name="LabelaZubar" Content="Zubar" HorizontalAlignment="Left" Margin="715,202,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" RenderTransformOrigin="-0.295,0.505"/>
        <Label x:Name="LabelaIme" Content="Ime" HorizontalAlignment="Left" Margin="82,127,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaAlergije" Content="Alergije" HorizontalAlignment="Left" Margin="549,201,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaBrojZuba" Content="Broj zuba" HorizontalAlignment="Left" Margin="384,201,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaTrudnoca" Content="Trudnoća" HorizontalAlignment="Left" Margin="224,200,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaPol" Content="Pol" HorizontalAlignment="Left" Margin="83,201,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaPrezime" Content="Prezime" HorizontalAlignment="Left" Margin="228,122,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaJMBG" Content="JMBG" HorizontalAlignment="Left" Margin="395,121,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="LabelaBrojTelefona" Content="Broj telefona" HorizontalAlignment="Left" Margin="534,122,0,0" VerticalAlignment="Top" Foreground="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="ButtonDodaj" Content="Dodaj" Margin="923,183,421,548" Background="#FF9DF16A" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonDodaj_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonObrisi" Content="Obriši" Margin="1110,183,234,548" Background="#FFF17D5D" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonObrisi_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonIzmeni" Content="Izmeni" Margin="1298,183,46,548" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" BorderBrush="Black" Click="ButtonIzmeni_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonNazad" Content="Nazad" Margin="10,10,1394,734" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Click="ButtonNazad_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <ComboBox x:Name="ComboboxPol" HorizontalAlignment="Left" Margin="21,237,0,0" VerticalAlignment="Top" Width="155" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" Foreground="Black" Height="26">
            <ComboBoxItem Content="M" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold"/>
            <ComboBoxItem Background="#FFFFF0A7" Content="Ž" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold"/>
        </ComboBox>

        <DataGrid Name="DataGrid" AutoGenerateColumns="False" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="58,309,46,44" SelectionChanged="DataGrid_SelectionChanged_1" Background="#FFFFF0A7" AlternatingRowBackground="#FFFFF5C3" FontFamily="Yu Gothic UI Semibold" FontSize="14" BorderBrush="Black">
            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding IDPacijenta}" Header="ID pacijenta" Width="*"/>
                <DataGridTextColumn Binding="{Binding Ime}" Header="Ime" Width="*"/>
                <DataGridTextColumn Binding="{Binding Prezime}" Header="Prezime" Width="*"/>
                <DataGridTextColumn Binding="{Binding JMBG}" Header="JMBG" Width="*"/>
                <DataGridTextColumn Binding="{Binding BrojTelefona}" Header="Broj telefona" Width="*"/>
                <DataGridTextColumn Binding="{Binding Pol}" Header="Pol" Width="*"/>
                <DataGridTextColumn Binding="{Binding Alergije}" Header="Alergije" Width="*"/>
                <DataGridTextColumn Binding="{Binding Trudnoca}" Header="Trudnoca" Width="*"/>
                <DataGridTextColumn Binding="{Binding BrojZuba}" Header="Broj zuba" Width="*"/>
                <DataGridTextColumn Binding="{Binding IDZubara}" Header="ID zubara" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
        <ComboBox x:Name="ComboboxZubar" HorizontalAlignment="Left" Margin="661,236,0,0" VerticalAlignment="Top" Width="155" Background="#FFFFF0A7" FontFamily="Yu Gothic UI Semibold" FontSize="14" FontWeight="Bold" Foreground="Black" Height="26" Loaded="ComboboxZubar_Loaded"/>

    </Grid>
</Window>
